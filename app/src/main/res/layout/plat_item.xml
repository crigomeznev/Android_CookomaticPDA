<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/plat_bg"
    android:layout_margin="10dp">

    <ImageButton
        android:background="@drawable/plus"
        android:id="@+id/btnAfegirPlat"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:text="-"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageButton>

    <TextView
        android:id="@+id/txvPreuPlat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20,00â‚¬"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/yellow"></TextView>

    <ImageView
        android:id="@+id/imvImatgePlat"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/black"></ImageView>

    <TextView
        android:id="@+id/txvNomPlat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Patates fregides"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imvImatgePlat"
        android:background="@color/orange"></TextView>

    <ImageButton
        android:background="@drawable/minus_red"
        android:id="@+id/btnTreurePlat"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:text="+"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"></ImageButton>
</androidx.constraintlayout.widget.ConstraintLayout>